        function getCurrentPageData() {
            if (currentPage <= 7) {
                return pages[currentPage];
            } else {
                return chosenPath === 'A' ? pathA[currentPage] : pathB[currentPage];
            }
        }
        
        function loadPage() {
            const pageData = getCurrentPageData();
            const container = document.getElementById('story-container');
            
            container.style.opacity = '0';
            
            setTimeout(() => {
                let content = `
                    <div class="illustration ${pageData.class}">
                        <div class="stars-decoration">â­</div>
                        <div class="stars-decoration right">â­</div>
                        <div class="illustration-content">${pageData.illustration}</div>
                    </div>
                    <div class="story-text">${pageData.text}</div>
                `;
                
                if (pageData.hasChoice) {
                    content += `
                        <div class="choices">
                            <button class="choice-btn" onclick="choosePathA()">
                                ğŸ” Buscar los cascabeles perdidos
                            </button>
                            <button class="choice-btn" onclick="choosePathB()">
                                ğŸ¨ Hacer cascabeles nuevos
                            </button>
                        </div>
                    `;
                } else {
                    content += `
                        <div class="navigation">
                            <button class="nav-btn prev" onclick="prevPage()" ${currentPage === 1 ? 'disabled' : ''}>
                                â¬…ï¸ AtrÃ¡s
                            </button>
                            <button class="nav-btn next" onclick="nextPage()" ${currentPage === 15 ? 'disabled' : ''}>
                                ${currentPage === 15 ? 'ğŸ”„ Volver al inicio' : 'Siguiente â¡ï¸'}
                            </button>
                        </div>
                    `;
                }
                
                container.innerHTML = content;
                document.getElementById('page-counter').textContent = `ğŸ“– PÃ¡gina ${currentPage} de 15`;
                container.style.opacity = '1';
            }, 300);
        }
        
        function nextPage() {
            if (currentPage < 15) {
                currentPage++;
                loadPage();
            } else {
                currentPage = 1;
                chosenPath = null;
                loadPage();
            }
        }
        
        function prevPage() {
            if (currentPage > 1) {
                if (currentPage === 8 && chosenPath) {
                    chosenPath = null;
                }
                currentPage--;
                loadPage();
            }
        }
        
        function choosePathA() {
            chosenPath = 'A';
            currentPage = 8;
            loadPage();
        }
        
        function choosePathB() {
            chosenPath = 'B';
            currentPage = 8;
            loadPage();
        }
        
        function playAudio() {
            if (!('speechSynthesis' in window)) {
                alert('Tu dispositivo no puede leer la historia en voz alta. PÃ­dele a mamÃ¡ o papÃ¡ que te la lea.');
                return;
            }
            
            window.speechSynthesis.cancel();
            
            const pageData = getCurrentPageData();
            const tempDiv = document.createElement('div');
            tempDiv.innerHTML = pageData.text;
            const textToRead = tempDiv.textContent || tempDiv.innerText;
            
            const utterance = new SpeechSynthesisUtterance(textToRead);
            utterance.lang = 'es-ES';
            utterance.rate = 0.75;
            utterance.pitch = 1.3;
            utterance.volume = 1;
            
            const btn = document.getElementById('audio-btn');
            btn.textContent = 'ğŸ”Š Narrando...';
            btn.disabled = true;
            
            utterance.onend = function() {
                btn.textContent = 'ğŸ”Š Escuchar la historia';
                btn.disabled = false;
            };
            
            utterance.onerror = function() {
                btn.textContent = 'ğŸ”Š Escuchar la historia';
                btn.disabled = false;
            };
            
            window.speechSynthesis.speak(utterance);
        }
        
        loadPage();
    </script>
